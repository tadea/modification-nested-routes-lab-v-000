<%= form_for @song  do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <% if @song.artist_name %>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  <% else %>
    <%= artist_select(@song, @artist) %>
  <% end %>

  <%= f.submit %>
<% end %>
